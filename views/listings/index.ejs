<%layout("/layouts/boilerplate")%>
<body>
  <h3>All Listings</h3>
  <!-- 
  <form method="GET" action="/listings/new">
    <button>Create New Listing</button>
  </form> -->
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
 <% for(let listing of allListing){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
  <div class="card col">
  <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height:20rem">
  <div class="card-img-overlay"></div>
  <div class="card-body">
   
    <p class="card-text ">
      <b><%= listing.title%></b><br />
<%= listing?.price ? Number(listing.price).toLocaleString("en-IN") : "No Price" %>/night
</p>
  </div>
</div>
<% }%>
  </div>
 </a>
</body>


